!!!
%html{lang: @item[:lang] || "et"}
	%head
		%meta(charset="utf-8")
		%title= @item[:title] + (@item[:page] != "home" ? " - #kuidasmekestame" : "")
		%meta(name="generator" content="Nanoc #{Nanoc::VERSION}")
		%meta(name="viewport" content="width=device-width, initial-scale=1")
		%link(rel="stylesheet" href="/assets/default.css")

		- if @config[:env] == "production"
			:javascript
				function args() { return arguments }
				dataLayer = [args("js", new Date), args("config", "UA-122944734-1")]
			%script(async src="https://www.googletagmanager.com/gtag/js?id=UA-122944734-1")

	%body{id: item[:page] && "#{item[:page]}-page"}
		%nav#nav
			%center
				%a.home(href="/") #kuidasmekestame

				%menu
					%a{link_to_unless_current("/algatusest/")} Algatusest
					%a{link_to_unless_current("/probleemist/")} Probleemistik
					%a{link_to_unless_current("/arutelud/")} Arutelud
					%a{link_to_unless_current("/tulemused/")} Tulemused
					%a{link_to_unless_current("/osalusarutelu/")} Osalusarutelu

		%main= yield

		%footer#footer
			%center
				%p#contact
					%strong Kogukondlike arutelude koordinaator<br>
					Maris Jõgeva<br>
					<strong>e-post</strong>:
					<a href="mailto:maris@rahvaalgatus.ee">maris@rahvaalgatus.ee</a><br>
					<strong>tel</strong>:
					<a href="tel:+37253421726">+372 53421726</a><br>

				#supporters
					%h2
						Projekti kaasrahastavad Euroopa Liit Varjupaiga-, Rände- ja
						Integratsioonifondi kaudu ning Eesti Vabariigi Siseministeerium:

					%ul
						%li
							%img(src="/assets/eu.svg" alt="Euroopa Liit")

						%li
							%a(href="https://kul.ee")
								%img(src="/assets/kultuuriministeerium.svg" alt="Kultuuriministeerium")
						%li
							%a(href="https://www.siseministeerium.ee" alt="Siseministeerium")
								%img(src="/assets/siseministeerium.svg")
