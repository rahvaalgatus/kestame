.discussion.paragraph{id: @id, class: @discussion.future? ? "future" : "past"}
	%h4= @discussion.title

	%dl
		%dt= @discussion.future? ? "Toimub" : "Toimus"
		%dd
			%time{datetime: @discussion.at.strftime("%FT%T%:z")}
				= @discussion.at.strftime("%-d.%-m.%Y kl %-H:%M")

			- if @discussion.at != @discussion.until
				â€“#{@discussion.until.strftime("%-H:%M")}

		%dt Asukoht
		%dd= @discussion.address

		- if @discussion.has_organizer?
			%dt Korraldaja
			%dd
				- organizer_name = @discussion.organizer_name
				- organizer_email = @discussion.organizer_email
				- organizer_phone = @discussion.organizer_phone
				#{organizer_name},&#32;
				<a href="mailto:#{organizer_email}">#{organizer_email}</a>,&#32;
				<a href="tel:#{organizer_phone}">#{organizer_phone}</a>
